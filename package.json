{
  "name": "dialetus",
  "author": "Marcus Silva <mvfsillva@gmail.com>",
  "version": "0.0.0",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "clean": "rimraf build",
    "coveralls": "yarn test:coverage && cat ./coverage/lcov.info | ./node_modules/.bin/coveralls && rm -rf coverage",
    "start": "next start",
    "lint": "xo --quiet && stylelint '**/*.js'",
    "lint:fix": "xo --quiet --write '**/*.js'",
    "precommit": "lint-staged",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "axios": "latest",
    "classnames": "^2.2.6",
    "next": "^6.1.1",
    "next-routes": "^1.4.2",
    "polished": "^2.0.3",
    "prop-types": "^15.6.2",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "styled-components": "^3.4.5"
  },
  "devDependencies": {
    "babel-jest": "^23.4.2",
    "babel-plugin-inline-dotenv": "^1.1.2",
    "babel-plugin-transform-inline-environment-variables": "^0.4.3",
    "babel-preset-jest": "^23.2.0",
    "enzyme": "^3.6.0",
    "enzyme-adapter-react-16": "^1.5.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.11.1",
    "husky": "^0.14.3",
    "jest": "^23.5.0",
    "jest-styled-components": "^6.1.1",
    "lint-staged": "^7.2.2",
    "prettier": "^1.14.2",
    "rimraf": "^2.6.2",
    "stylelint": "^9.5.0",
    "stylelint-config-prettier": "^4.0.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.3.2",
    "xo": "^0.22.0"
  },
  "xo": {
    "extends": [
      "prettier",
      "prettier/react",
      "plugin:react/recommended"
    ]
  },
  "lint-staged": {
    "*.js": [
      "yarn lint",
      "prettier --semi false --single-quote --print-width 100 --tab-width 2 --trailing-comma all --write",
      "git add"
    ]
  },
  "jest": {
    "verbose": true,
    "testURL": "http://localhost/",
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "setupFiles": [
      "<rootDir>/config/test/enzyme.theme.js"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/config/test/enzyme.setup.js",
    "coveragePathIgnorePatterns": [
      "<rootDir>/build/",
      "<rootDir>/node_modules/"
    ]
  }
}
