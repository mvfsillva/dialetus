{
  "name": "dialetus",
  "author": "Marcus Silva <mvfsillva@gmail.com>",
  "version": "1.0.0",
  "description": "Dicionario informal com dialetos de cada regiao brasileira.",
  "keywords": [
    "culture",
    "dictionary",
    "Brazilian dialects",
    "dialetos brasileiros",
    "cultura brasileira",
    "dicionario informal",
    "riqueza linguistica"
  ],
  "scripts": {
    "dev": "next -p 4001",
    "build": "next build",
    "start": "next start",
    "type-check": "tsc",
    "lint:fix": "xo --quiet --write \"**/*.+(js|ts|tsx)\"",
    "lint": "xo",
    "lint:format": "prettier --write '**/*.{js,jsx,ts, tsx}'",
    "test": "jest",
    "validate": "yarn lint && yarn lint:css && yarn test"
  },
  "xo": {
    "extends": [
      "prettier",
      "prettier/react",
      "plugin:react/recommended"
    ]
  },
  "lint-staged": {
    "**/*.+(js|ts|tsx)": [
      "prettier --semi false --single-quote --write",
      "yarn validate",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "dotenv": "8.2.0",
    "next": "9.4.4",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "styled-components": "5.1.1",
    "swr": "^0.2.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "5.11.0",
    "@testing-library/react": "10.0.4",
    "@testing-library/react-hooks": "3.2.1",
    "@types/jest": "^25.2.3",
    "@types/node": "^14.0.6",
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.8",
    "@types/styled-components": "^5.1.0",
    "eslint-plugin-react": "^7.20.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "jest-styled-components": "^7.0.2",
    "jsdom": "16.2.2",
    "lint-staged": "^10.2.7",
    "prettier": "^2.0.5",
    "stylelint": "^13.5.0",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.10.0",
    "ts-jest": "^26.1.0",
    "ts-loader": "^7.0.5",
    "tsconfig-paths-webpack-plugin": "3.2.0",
    "typescript": "^3.9.3",
    "xo": "^0.30.0"
  }
}
