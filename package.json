{
  "name": "dialetus",
  "author": "Marcus Silva <mvfsillva@gmail.com>",
  "version": "0.1.0",
  "scripts": {
    "dev": "node server",
    "build": "next build",
    "clean": "rimraf build",
    "coveralls": "yarn test:coverage && cat ./coverage/lcov.info | ./node_modules/.bin/coveralls && rm -rf coverage",
    "start": "next start",
    "lint": "xo --quiet",
    "lint:css": "stylelint './components/**/*.js' './styles/**/*.js' './pages/**/*.js' './layouts/**/*.js'",
    "lint:fix": "xo --quiet --write '**/*.js'",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@rebass/grid": "^6.0.0-4",
    "axios": "latest",
    "babel-preset-react": "^6.24.1",
    "classnames": "^2.2.6",
    "next": "^8.0.1",
    "next-routes": "^1.4.2",
    "polished": "^2.0.3",
    "prop-types": "^15.6.2",
    "react": "^16.8.2",
    "react-dom": "^16.5.0",
    "react-extras": "^0.7.1",
    "styled-components": "^4.1.1",
    "styled-theme": "^0.3.3",
    "throttle-debounce": "^2.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.3.3",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.2",
    "babel-plugin-inline-dotenv": "^1.2.1",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-plugin-styled-components": "^1.7.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-inline-environment-variables": "^0.4.3",
    "babel-plugin-transform-object-assign": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-jest": "^23.2.0",
    "babel-runtime": "^6.26.0",
    "dotenv": "^6.2.0",
    "enzyme": "^3.6.0",
    "enzyme-adapter-react-16": "^1.5.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.1",
    "husky": "^0.14.3",
    "jest": "^24.1.0",
    "jest-styled-components": "^6.3.1",
    "lint-staged": "^7.2.2",
    "prettier": "^1.14.2",
    "rimraf": "^2.6.2",
    "stylelint": "^9.5.0",
    "stylelint-config-prettier": "^4.0.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.3.2",
    "sw-precache-webpack-plugin": "^0.11.5",
    "xo": "^0.22.0"
  },
  "xo": {
    "parser": "babel-eslint",
    "extends": [
      "prettier",
      "prettier/react",
      "plugin:react/recommended"
    ],
    "plugins": [
      "jsx-a11y"
    ],
    "rules": {
      "react/react-in-jsx-scope": 0,
      "import/no-unassigned-import": 0,
      "import/no-unresolved": 0
    },
    "globals": [
      "expect",
      "it",
      "describe"
    ]
  },
  "lint-staged": {
    "*.js": [
      "yarn lint",
      "prettier --semi false --single-quote --print-width 100 --tab-width 2 --trailing-comma all --write",
      "git add"
    ]
  },
  "jest": {
    "verbose": true,
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleNameMapper": {
      "^config/([^\\.]*)$": "<rootDir>/config/$1"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/config/enzyme.setup.js"
    ]
  }
}
