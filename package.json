{
  "name": "dialetus",
  "author": "Marcus Silva <mvfsillva@gmail.com>",
  "version": "1.0.0",
  "description": "Dicionario informal com dialetos de cada regiao brasileira.",
  "keywords": [
    "culture",
    "dictionary",
    "Brazilian dialects",
    "dialetos brasileiros",
    "cultura brasileira",
    "dicionario informal",
    "riqueza linguistica"
  ],
  "scripts": {
    "dev": "node server",
    "build": "next build",
    "now-build": "next build",
    "clean": "rimraf build",
    "coveralls": "yarn test:coverage && cat ./coverage/lcov.info | ./node_modules/.bin/coveralls && rm -rf coverage",
    "start": "next start",
    "lint": "xo --quiet",
    "lint:css": "stylelint './components/**/*.js' './styles/**/*.js' './pages/**/*.js' './layouts/**/*.js'",
    "lint:fix": "xo --quiet --write '**/*.js'",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "export": "next export",
    "deploy": "npm run build && npm run export"
  },
  "dependencies": {
    "@rebass/grid": "6.1.0",
    "axios": "latest",
    "babel-preset-react": "6.24.1",
    "classnames": "2.2.6",
    "next": "9.3.6",
    "next-offline": "4.0.6",
    "next-routes": "1.4.2",
    "polished": "3.5.2",
    "prop-types": "15.7.2",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-extras": "1.0.1",
    "styled-components": "5.1.0",
    "styled-theme": "0.3.3",
    "throttle-debounce": "2.1.0"
  },
  "devDependencies": {
    "@babel/core": "7.9.6",
    "@babel/preset-env": "7.9.6",
    "@babel/preset-react": "7.9.4",
    "babel-cli": "6.26.0",
    "babel-eslint": "10.1.0",
    "babel-jest": "25.5.1",
    "babel-loader": "8.1.0",
    "babel-plugin-inline-dotenv": "1.5.0",
    "babel-plugin-module-resolver": "4.0.0",
    "babel-plugin-styled-components": "1.10.7",
    "babel-plugin-transform-class-properties": "6.24.1",
    "babel-plugin-transform-inline-environment-variables": "0.4.3",
    "babel-plugin-transform-object-assign": "6.22.0",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-preset-env": "1.7.0",
    "babel-preset-jest": "25.5.0",
    "babel-runtime": "6.26.0",
    "dotenv": "8.2.0",
    "enzyme": "3.11.0",
    "enzyme-adapter-react-16": "1.15.2",
    "eslint-config-prettier": "6.10.0",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-react": "7.19.0",
    "husky": "3.1.0",
    "jest": "25.5.3",
    "jest-styled-components": "6.3.4",
    "lint-staged": "9.5.0",
    "prettier": "1.19.1",
    "rimraf": "3.0.2",
    "stylelint": "12.0.1",
    "stylelint-config-prettier": "6.0.0",
    "stylelint-config-standard": "19.0.0",
    "stylelint-config-styled-components": "0.1.1",
    "stylelint-processor-styled-components": "1.10.0",
    "sw-precache-webpack-plugin": "0.11.5",
    "xo": "0.30.0"
  },
  "xo": {
    "parser": "babel-eslint",
    "extends": [
      "prettier",
      "prettier/react",
      "plugin:react/recommended"
    ],
    "plugins": [
      "jsx-a11y"
    ],
    "rules": {
      "react/react-in-jsx-scope": 0,
      "import/no-unassigned-import": 0,
      "import/no-unresolved": 0
    },
    "globals": [
      "expect",
      "it",
      "describe"
    ]
  },
  "lint-staged": {
    "*.js": [
      "yarn lint",
      "prettier --semi false --single-quote --print-width 100 --tab-width 2 --trailing-comma all --write",
      "git add"
    ]
  },
  "jest": {
    "verbose": true,
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleNameMapper": {
      "^config/([^\\.]*)$": "<rootDir>/config/$1"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/config/enzyme.setup.js"
    ]
  }
}
